@model List<DepartmentViewModel>
@{
    ViewBag.Title = "all departments";
}

<div class="alert">All Departments</div>

@if(Model.Count > 0)
{

    <table>
        <thead>
            <tr>
                <th>S.N.</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model ){
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td><button class="btn btn-outline-primary">Edit</button></td>
                    <td><button class="btn btn-outline-primary">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
    }
else {
    <h2>List coming soon</h2>
}