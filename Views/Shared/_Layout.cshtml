<body>
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar anim-sidebar" id="sidebar">
                        <div class="widget-container">
                            <p class="widget-header">Core</p>
                            <ul class="widget widget-menu unstyled">
                                <li class="active">
                                    <a href="index.html"><i class="menu-icon icon-dashboard"></i>Dashboard</a>
                                </li>
                            </ul>
                        </div>
                        <div class="widget-container">
                            <p class="widget-header">Interface</p>
                            <ul class="widget widget-menu unstyled">
                                <li>
                                    <a class="collapsed" data-toggle="collapse" href="#toggleDepartmentLinks">
                                        <i class="menu-icon icon-building"></i>
                                        <i class="icon-chevron-down pull-right"></i>
                                        <i class="icon-chevron-up pull-right"></i>
                                        Departments </a>
                                    <ul id="toggleDepartmentLinks" class="collapse unstyled">
                                        <li>
                                            <a asp-action="Create" asp-controller="Department">Create </a>
                                        </li>
                                        <li>
                                            <a asp-action="Index" asp-controller="Department">View</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" href="#toggle-users-section">
                                        <i class="menu-icon icon-user"></i>
                                        <i class="icon-chevron-down pull-right"></i>
                                        <i class="icon-chevron-up pull-right"></i>
                                        User </a>
                                    <div id="toggle-users-section" class="collapse unstyled">
                                        <a class="collapsed" data-toggle="collapse" href="#toggleRoles">
                                            <i class="icon-chevron-down pull-right"></i>
                                            Role </a>
                                        <ul id="toggleRoles" class="collapse unstyled">
                                            <li><a href="other-login.html">Create </a></li>
                                            <li><a href="other-user-profile.html">View </a></li>
                                        </ul>
                                        <a class="collapsed" data-toggle="collapse" href="#toggleUsers">
                                            <i class="icon-chevron-down pull-right"></i>
                                            Users </a>
                                        <ul id="toggleUsers" class="collapse unstyled">
                                            <li><a href="other-login.html"><i class="icon-inbox"></i>Create </a></li>
                                            <li><a href="other-user-profile.html"><i class="icon-inbox"></i>View </a>
                                            </li>
                                        </ul>
                                        <a class="collapsed" data-toggle="collapse" href="#togglePermissions">
                                            <i class="icon-chevron-down pull-right"></i>
                                            Persmission </a>
                                        <ul id="togglePermissions" class="collapse unstyled">
                                            <li><a href="other-login.html"><i class="icon-inbox"></i>Create </a></li>
                                            <li><a href="other-user-profile.html"><i class="icon-inbox"></i>View </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" href="#toggleLeaves">
                                        <i class="menu-icon icon-lock"></i>
                                        <i class="icon-chevron-down pull-right"></i>
                                        <i class="icon-chevron-up pull-right"></i>
                                        Staff Leave </a>
                                    <ul id="toggleLeaves" class="collapse unstyled">
                                        <li><a href="other-login.html">Approve Leave </a></li>
                                        <li><a href="other-user-profile.html">Create Leave</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" href="#toggleNotices">
                                        <i class="menu-icon icon-pencil"></i>
                                        <i class="icon-chevron-down pull-right"></i>
                                        <i class="icon-chevron-up pull-right"></i>
                                        Staff Notices</a>
                                    <ul id="toggleNotices" class="collapse unstyled">
                                        <li><a href="other-login.html">View Notice </a></li>
                                        <li><a href="other-user-profile.html">Create Notice </a></li>
                                    </ul>
                                </li>
                                <li><a href="#"><i class="menu-icon icon-envelope"></i>Mail </a></li>
                            </ul>
                        </div>
                    </div>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->
                <div class="span9">
                    @RenderBody()
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->

    <script src="~/js/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
