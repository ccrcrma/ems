<div class="modal hide fade" id="delete-department-model" role="dialog">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Modal header</h3>
    </div>
    <div class="modal-body">
        <p>Are you sure you want to delete this Department</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <form asp-action="Delete" asp-controller="Department" id="delete-department">
            <input type="hidden">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
    </div>
</div>

@using (Html.BeginScripts())
{
    <script>
    $('#delete-department-model').on('show', function (event) {
        var toggler = document.querySelector('[data-toggle="modal"]');
        var departmentId = parseInt(toggler.dataset.departmentId);
        var deleteForm =  document.getElementById("delete-department");
        var actionWithoutResource =deleteForm.getAttribute("action");
        deleteForm.setAttribute("action", `${actionWithoutResource}/${departmentId}`);
    })
</script>
}