@model RoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h3 class="page-header">Edit Role @Model.Name</h3>
<form asp-action="Edit" asp-route-id="@Model.Name">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"> </textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Users" class="form-label"></label>
        @for(int i =0; i< Model.Users.Count; i++)
            {
                <label asp-for="@Model.Users[i].Selected">@Model.Users[i].Text</label>
                <input asp-for="@Model.Users[i].Selected" class="form-control"></input>

            }
    </div>
    
    <button class="btn btn-primary" type="submit">Edit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}