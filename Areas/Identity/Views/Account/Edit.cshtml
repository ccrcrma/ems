@model UserViewModel;
@{
    ViewBag.Title = "Edit user";
}

<h3 class="page-header">Edit User</h3>

<form asp-action="Edit">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" readonly>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" readonly>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" readonly>
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly>
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control">
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>

     <div class="mb-3">
        <label asp-for="Post" class="form-label"></label>
        <select asp-for="Post" class="form-control" asp-items="@Html.GetEnumSelectList<Designation>()" ></select>
        <span class="text-danger" asp-validation-for="Post"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <select asp-for="Department" class="form-control" asp-items="@Model.Departments"></select>
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>

    <div class="mb-3" style="margin-bottom:2rem;">
        <label asp-for="Roles" class="form-label"></label>
        <div style="display:flex; margin-left:2rem; justify-content:start;">
            @for(int i=0; i<Model.Roles.Count; i ++){
                <div class="form-check flex-item">
                    <label class="form-check-label" 
                        asp-for="@Model.Roles[i].Selected">@Model.Roles[i].Text</label>
                    <input class="form-check-input" 
                        asp-for="@Model.Roles[i].Selected">
                    <input type="hidden" asp-for="@Model.Roles[i].Value">
                </div>
            }
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Edit</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}